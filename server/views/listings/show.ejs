<%- include("../shared/_header") %>

<div class="container mt-5">
  <h1>Listing Details</h1>

  <hr class="my-5" />

  <a href="/listings/<%= listing.id %>/edit">Edit listing</a>

  <div>
    <div class="listing-body">
      <p class="listing-text">
        <strong>Address:</strong> <%= listing.address %><br />
        <strong>Price:</strong> <%= listing.price %><br />
        <strong>Description:</strong> <%= listing.description %><br />
        <strong>Property Type:</strong> <%= listing.propertyType %><br />
        <strong>Bedrooms:</strong> <%= listing.bedrooms %><br />
        <strong>Bathrooms:</strong> <%= listing.bathrooms %><br />
        <strong>Square Footage:</strong> <%= listing.squareFootage %><br />
        <strong>Lot Size:</strong> <%= listing.lotSize %><br />
        <strong>Year Built:</strong> <%= listing.yearBuilt %><br />
        <strong>Status:</strong> <%= listing.status %><br />
        <strong>Tags:</strong> <%= listing.tags.join(', ') %><br />
        <strong>Open House Dates:</strong>
        <% listing.images.forEach(function(image) { %>
        <img
          class="img-thumbnail"
          style="max-width: 100px; max-height: 100px"
          src="http://localhost:1111/<%= image %>"
          />
        <% }); %>

        <br />
      </p>
    </div>
  </div>

  <a href="/listings">Back to List</a>
</div>

<%- include("../shared/_footer") %>
